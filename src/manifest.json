{
  "manifest_version": 3,
  "name": "Lucid",
  "version": "1.0.0",
  "description": "Intercepts and logs Ethereum transactions for enhanced security",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["injected.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": ["scripting"]
}
